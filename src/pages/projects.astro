---
// Projects page - Redirects to GitHub repositories
// This page exists for SEO purposes and provides a direct link to all projects

import { Layout } from "~/components/dom";

const projects = [
	{
		name: "Ledger",
		description: "Shop management system with customer tracking, GST invoicing, and profit analytics",
		tech: ["React", "Node.js", "PostgreSQL", "Docker"],
		github: "https://github.com/Priyans-hu/ledger",
		color: "emerald"
	},
	{
		name: "UrbanKicks",
		description: "E-commerce platform for urban footwear with secure checkout and reviews",
		tech: ["React", "Node.js", "MongoDB"],
		github: "https://github.com/Priyans-hu/UrbanKicks",
		color: "orange"
	},
	{
		name: "StockFlow",
		description: "Real-time inventory management with order tracking and analytics",
		tech: ["React", "Express", "MongoDB"],
		github: "https://github.com/Priyans-hu/StockFlow",
		color: "blue"
	},
	{
		name: "PasteBox",
		description: "Code snippet sharing platform with syntax highlighting",
		tech: ["React", "Node.js", "Tailwind"],
		github: "https://github.com/Priyans-hu/PasteBox",
		color: "purple"
	}
];

const colorClasses = {
	emerald: {
		bg: "from-emerald-500/10",
		border: "hover:border-emerald-500/30",
		shadow: "hover:shadow-emerald-500/10",
		icon: "bg-emerald-500/20 text-emerald-500",
		tag: "bg-emerald-500/10 text-emerald-400 border-emerald-500/20",
		text: "group-hover:text-emerald-400"
	},
	orange: {
		bg: "from-orange-500/10",
		border: "hover:border-orange-500/30",
		shadow: "hover:shadow-orange-500/10",
		icon: "bg-orange-500/20 text-orange-500",
		tag: "bg-orange-500/10 text-orange-400 border-orange-500/20",
		text: "group-hover:text-orange-400"
	},
	blue: {
		bg: "from-blue-500/10",
		border: "hover:border-blue-500/30",
		shadow: "hover:shadow-blue-500/10",
		icon: "bg-blue-500/20 text-blue-500",
		tag: "bg-blue-500/10 text-blue-400 border-blue-500/20",
		text: "group-hover:text-blue-400"
	},
	purple: {
		bg: "from-purple-500/10",
		border: "hover:border-purple-500/30",
		shadow: "hover:shadow-purple-500/10",
		icon: "bg-purple-500/20 text-purple-500",
		tag: "bg-purple-500/10 text-purple-400 border-purple-500/20",
		text: "group-hover:text-purple-400"
	}
};
---

<Layout title="Projects | Priyanshu Garg - Full Stack Developer" description="Open source projects by Priyanshu Garg - Ledger, UrbanKicks, StockFlow, PasteBox and more. Full stack web applications built with React, Node.js, and modern technologies.">
	<main class="min-h-screen pt-24 pb-16 px-4 sm:px-6">
		<div class="max-w-5xl mx-auto">
			<!-- Header -->
			<div class="text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">
					My <span class="gradient-text">Projects</span>
				</h1>
				<p class="text-lg text-muted-foreground max-w-2xl mx-auto mb-8">
					Open source projects showcasing full stack development with React, Node.js, Go, and modern web technologies.
				</p>
				<a
					href="https://github.com/Priyans-hu?tab=repositories"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary text-primary-foreground font-medium hover:opacity-90 transition-opacity"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
					</svg>
					View All on GitHub
				</a>
			</div>

			<!-- Projects Grid -->
			<div class="grid md:grid-cols-2 gap-6">
				{projects.map(project => {
					const colors = colorClasses[project.color as keyof typeof colorClasses];
					return (
						<a
							href={project.github}
							target="_blank"
							rel="noopener noreferrer"
							class={`group relative rounded-3xl overflow-hidden bg-gradient-to-br ${colors.bg} via-card to-card border border-border/50 ${colors.border} transition-all duration-500 hover:shadow-2xl ${colors.shadow} block`}
						>
							<div class="relative p-6 sm:p-8">
								<div class="flex items-start justify-between mb-4">
									<div class={`w-12 h-12 rounded-2xl ${colors.icon} flex items-center justify-center`}>
										<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
											<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
										</svg>
									</div>
									<svg class="w-5 h-5 text-muted-foreground group-hover:text-foreground transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
									</svg>
								</div>
								<h2 class={`text-2xl font-bold mb-3 ${colors.text} transition-colors`}>{project.name}</h2>
								<p class="text-muted-foreground mb-6">{project.description}</p>
								<div class="flex flex-wrap gap-2">
									{project.tech.map(tech => (
										<span class={`px-3 py-1.5 rounded-full ${colors.tag} text-xs font-medium border`}>
											{tech}
										</span>
									))}
								</div>
							</div>
						</a>
					);
				})}
			</div>

			<!-- Back to Home -->
			<div class="text-center mt-16">
				<a href="/" class="text-muted-foreground hover:text-foreground transition-colors">
					&larr; Back to Home
				</a>
			</div>
		</div>
	</main>
</Layout>
