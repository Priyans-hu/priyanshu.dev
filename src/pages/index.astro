---
// JARVIS Portfolio - Main Entry Point
import { Layout } from "~/components/dom";
import ThemeToggle from "~/components/dom/common/ThemeToggle";
import MobileNav from "~/components/dom/common/MobileNav";

const navLinks = [
	{ href: "#work", label: "Work" },
	{ href: "#experience", label: "Experience" },
	{ href: "#about", label: "About" },
	{ href: "#contact", label: "Contact" },
];
---

<Layout title="Priyanshu Garg | Web Developer">
	<!-- Navigation -->
	<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-background/80 border-b border-border/50">
		<div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
			<a href="/" class="text-xl font-bold gradient-text">PG</a>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex items-center gap-6">
				{navLinks.map(link => (
					<a href={link.href} class="text-muted-foreground hover:text-foreground transition-colors">
						{link.label}
					</a>
				))}
				<ThemeToggle client:only="react" />
			</div>

			<!-- Mobile Navigation -->
			<div class="flex items-center gap-2 md:hidden">
				<ThemeToggle client:only="react" />
				<MobileNav client:only="react" links={navLinks} />
			</div>
		</div>
	</nav>

	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="min-h-screen flex items-center justify-center px-4 sm:px-6 pt-20">
			<div class="max-w-4xl mx-auto text-center space-y-6 sm:space-y-8">
				<div class="space-y-4">
					<p class="text-muted-foreground text-base sm:text-lg">Hello, I'm</p>
					<h1 class="text-4xl sm:text-5xl md:text-7xl font-bold">
						<span class="gradient-text">Priyanshu Garg</span>
					</h1>
					<p class="text-lg sm:text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto px-2">
						Web Developer & Tech Enthusiast crafting
						<span class="text-foreground font-medium">functional</span> and
						<span class="text-foreground font-medium">beautiful</span> digital experiences.
					</p>
				</div>

				<div class="flex flex-wrap justify-center gap-4">
					<a
						href="#work"
						class="px-8 py-3 rounded-full bg-primary text-primary-foreground font-medium hover:opacity-90 transition-opacity"
					>
						View Work
					</a>
					<a
						href="#contact"
						class="px-8 py-3 rounded-full border border-border hover:border-primary hover:text-primary transition-colors"
					>
						Get in Touch
					</a>
				</div>

				<!-- Tech stack badges -->
				<div class="flex flex-wrap justify-center gap-3 pt-8">
					{["React", "Go", "TypeScript", "Node.js", "AWS", "Python"].map(tech => (
						<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
							{tech}
						</span>
					))}
				</div>
			</div>
		</section>

		<!-- Work Section - Bento Grid Style -->
		<section id="work" class="py-20 sm:py-32 px-4 sm:px-6">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold mb-16 text-center">
					Featured <span class="gradient-text">Projects</span>
