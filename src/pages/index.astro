---
// JARVIS Portfolio - Main Entry Point
import { Layout } from "~/components/dom";
import ThemeToggle from "~/components/dom/common/ThemeToggle";
---

<Layout title="Priyanshu Garg | Web Developer">
	<!-- Navigation -->
	<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-background/80 border-b border-border/50">
		<div class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
			<a href="/" class="text-xl font-bold gradient-text">PG</a>
			<div class="flex items-center gap-6">
				<a href="#work" class="text-muted-foreground hover:text-foreground transition-colors">Work</a>
				<a href="#about" class="text-muted-foreground hover:text-foreground transition-colors">About</a>
				<a href="#contact" class="text-muted-foreground hover:text-foreground transition-colors">Contact</a>
				<ThemeToggle client:only="react" />
			</div>
		</div>
	</nav>

	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="min-h-screen flex items-center justify-center px-6 pt-20">
			<div class="max-w-4xl mx-auto text-center space-y-8">
				<div class="space-y-4">
					<p class="text-muted-foreground text-lg">Hello, I'm</p>
					<h1 class="text-5xl md:text-7xl font-bold">
						<span class="gradient-text">Priyanshu Garg</span>
					</h1>
					<p class="text-xl md:text-2xl text-muted-foreground max-w-2xl mx-auto">
						Web Developer & Tech Enthusiast crafting
						<span class="text-foreground font-medium">functional</span> and
						<span class="text-foreground font-medium">beautiful</span> digital experiences.
					</p>
				</div>

				<div class="flex flex-wrap justify-center gap-4">
					<a
						href="#work"
						class="px-8 py-3 rounded-full bg-primary text-primary-foreground font-medium hover:opacity-90 transition-opacity"
					>
						View Work
					</a>
					<a
						href="#contact"
						class="px-8 py-3 rounded-full border border-border hover:border-primary hover:text-primary transition-colors"
					>
						Get in Touch
					</a>
				</div>

				<!-- Tech stack badges -->
				<div class="flex flex-wrap justify-center gap-3 pt-8">
					{["React", "Next.js", "Node.js", "TypeScript", "Tailwind", "Three.js"].map(tech => (
						<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
							{tech}
						</span>
					))}
				</div>
			</div>
		</section>

		<!-- Work Section - Bento Grid Style -->
		<section id="work" class="py-32 px-6">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold mb-16 text-center">
					Featured <span class="gradient-text">Projects</span>
				</h2>

				<!-- Bento Grid Layout -->
				<div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-6">

					<!-- Ledger - Large Featured Card -->
					<article class="md:col-span-4 group relative rounded-3xl overflow-hidden bg-gradient-to-br from-emerald-500/10 via-card to-card border border-border/50 hover:border-emerald-500/30 transition-all duration-500 hover:shadow-2xl hover:shadow-emerald-500/10">
						<div class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
						<div class="relative p-8 h-full flex flex-col justify-between min-h-[320px]">
							<div>
								<div class="flex items-center gap-3 mb-4">
									<div class="w-12 h-12 rounded-2xl bg-emerald-500/20 flex items-center justify-center">
										<svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
										</svg>
									</div>
									<span class="text-xs font-medium text-emerald-500 uppercase tracking-wider">Featured</span>
								</div>
								<h3 class="text-3xl font-bold mb-3 group-hover:text-emerald-400 transition-colors">Ledger</h3>
								<p class="text-muted-foreground text-lg leading-relaxed max-w-lg">
									Comprehensive expense management with customer tracking, GST invoice generation, and real-time profit analytics dashboard.
								</p>
							</div>
							<div class="flex flex-wrap gap-2 mt-6">
								{["React", "Node.js", "MongoDB", "MySQL", "Tailwind"].map(tech => (
									<span class="px-3 py-1.5 rounded-full bg-emerald-500/10 text-emerald-400 text-xs font-medium border border-emerald-500/20">
										{tech}
									</span>
								))}
							</div>
						</div>
					</article>

					<!-- UrbanKicks - Tall Card -->
					<article class="md:col-span-2 md:row-span-2 group relative rounded-3xl overflow-hidden bg-gradient-to-b from-orange-500/10 via-card to-card border border-border/50 hover:border-orange-500/30 transition-all duration-500 hover:shadow-2xl hover:shadow-orange-500/10">
						<div class="absolute inset-0 bg-gradient-to-b from-orange-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
						<div class="relative p-6 h-full flex flex-col min-h-[400px] md:min-h-0">
							<div class="w-14 h-14 rounded-2xl bg-orange-500/20 flex items-center justify-center mb-6">
								<svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
								</svg>
							</div>
							<h3 class="text-2xl font-bold mb-3 group-hover:text-orange-400 transition-colors">UrbanKicks</h3>
							<p class="text-muted-foreground flex-1">
								E-commerce platform for urban footwear with product browsing, secure checkout, and customer reviews.
							</p>
							<div class="flex flex-wrap gap-2 mt-6">
								{["React", "Node.js", "MongoDB"].map(tech => (
									<span class="px-3 py-1.5 rounded-full bg-orange-500/10 text-orange-400 text-xs font-medium border border-orange-500/20">
										{tech}
									</span>
								))}
							</div>
						</div>
					</article>

					<!-- StockFlow - Medium Card -->
					<article class="md:col-span-2 group relative rounded-3xl overflow-hidden bg-gradient-to-br from-blue-500/10 via-card to-card border border-border/50 hover:border-blue-500/30 transition-all duration-500 hover:shadow-2xl hover:shadow-blue-500/10">
						<div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
						<div class="relative p-6 min-h-[200px] flex flex-col justify-between">
							<div>
								<div class="w-12 h-12 rounded-2xl bg-blue-500/20 flex items-center justify-center mb-4">
									<svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
									</svg>
								</div>
								<h3 class="text-xl font-bold mb-2 group-hover:text-blue-400 transition-colors">StockFlow</h3>
								<p class="text-muted-foreground text-sm">
									Real-time inventory management with order tracking and analytics.
								</p>
							</div>
							<div class="flex flex-wrap gap-1.5 mt-4">
								{["React", "Express", "MongoDB"].map(tech => (
									<span class="px-2.5 py-1 rounded-full bg-blue-500/10 text-blue-400 text-xs font-medium border border-blue-500/20">
										{tech}
									</span>
								))}
							</div>
						</div>
					</article>

					<!-- PasteBox - Medium Card -->
					<article class="md:col-span-2 group relative rounded-3xl overflow-hidden bg-gradient-to-br from-purple-500/10 via-card to-card border border-border/50 hover:border-purple-500/30 transition-all duration-500 hover:shadow-2xl hover:shadow-purple-500/10">
						<div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
						<div class="relative p-6 min-h-[200px] flex flex-col justify-between">
							<div>
								<div class="w-12 h-12 rounded-2xl bg-purple-500/20 flex items-center justify-center mb-4">
									<svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
									</svg>
								</div>
								<h3 class="text-xl font-bold mb-2 group-hover:text-purple-400 transition-colors">PasteBox</h3>
								<p class="text-muted-foreground text-sm">
									Share code snippets and text securely with syntax highlighting.
								</p>
							</div>
							<div class="flex flex-wrap gap-1.5 mt-4">
								{["React", "Node.js", "Tailwind"].map(tech => (
									<span class="px-2.5 py-1 rounded-full bg-purple-500/10 text-purple-400 text-xs font-medium border border-purple-500/20">
										{tech}
									</span>
								))}
							</div>
						</div>
					</article>

				</div>
			</div>
		</section>

		<!-- About Section -->
		<section id="about" class="py-32 px-6 bg-secondary/30">
			<div class="max-w-4xl mx-auto">
				<h2 class="text-3xl md:text-4xl font-bold mb-16 text-center">
					About <span class="gradient-text">Me</span>
				</h2>

				<div class="space-y-8 text-lg text-muted-foreground leading-relaxed">
					<p>
						With a strong foundation in computer science and a passion for software development,
						I actively engage in diverse projects and tech-related initiatives, honing my skills
						and delivering exceptional results.
					</p>
					<p>
						I excel in problem-solving and driving solutions from inception to completion.
						My expertise lies in crafting functional and visually appealing user interfaces
						using the <span class="text-foreground font-medium">MERN stack</span>,
						<span class="text-foreground font-medium">Java</span>, and modern design tools.
					</p>
					<p>
						I prioritize user-centric design and maintain a flexible approach that adapts
						seamlessly to project requirements. Currently pursuing my B.E. in Computer Science
						at Chitkara University.
					</p>
				</div>

				<!-- Skills Grid -->
				<div class="grid md:grid-cols-2 gap-6 mt-16">
					<div class="p-6 rounded-2xl bg-card border border-border">
						<h3 class="text-xl font-semibold mb-4">Languages</h3>
						<div class="flex flex-wrap gap-2">
							{["Java", "JavaScript", "TypeScript", "Python", "C/C++"].map(skill => (
								<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
									{skill}
								</span>
							))}
						</div>
					</div>

					<div class="p-6 rounded-2xl bg-card border border-border">
						<h3 class="text-xl font-semibold mb-4">Web Development</h3>
						<div class="flex flex-wrap gap-2">
							{["React.js", "Next.js", "Node.js", "Express.js", "Tailwind CSS"].map(skill => (
								<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
									{skill}
								</span>
							))}
						</div>
					</div>

					<div class="p-6 rounded-2xl bg-card border border-border">
						<h3 class="text-xl font-semibold mb-4">Databases</h3>
						<div class="flex flex-wrap gap-2">
							{["MongoDB", "PostgreSQL", "MySQL", "Redis"].map(skill => (
								<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
									{skill}
								</span>
							))}
						</div>
					</div>

					<div class="p-6 rounded-2xl bg-card border border-border">
						<h3 class="text-xl font-semibold mb-4">Tools & DevOps</h3>
						<div class="flex flex-wrap gap-2">
							{["Git", "Docker", "CI/CD", "AWS", "Agile"].map(skill => (
								<span class="px-4 py-2 rounded-full bg-secondary text-secondary-foreground text-sm">
									{skill}
								</span>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section id="contact" class="py-32 px-6">
			<div class="max-w-2xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold mb-8">
					Let's <span class="gradient-text">Connect</span>
				</h2>
				<p class="text-xl text-muted-foreground mb-12">
					Feel free to reach out for projects, collaborations, or just to say hello!
				</p>

				<div
					id="email-copy"
					class="text-2xl md:text-4xl font-semibold cursor-pointer hover:text-primary transition-colors p-4 rounded-xl hover:bg-primary/10"
					title="Click to copy email"
				>
					mailpriyanshugarg@gmail.com
				</div>

				<p class="text-muted-foreground mt-4 text-sm">Click to copy email address</p>

				<!-- Social Links -->
				<div class="flex justify-center gap-6 mt-12">
					<a
						href="https://github.com/Priyans-hu"
						target="_blank"
						rel="noopener noreferrer"
						class="p-4 rounded-full border border-border hover:border-primary hover:text-primary transition-all"
						title="GitHub"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
						</svg>
					</a>
					<a
						href="https://linkedin.com/in/priyanshu-garg"
						target="_blank"
						rel="noopener noreferrer"
						class="p-4 rounded-full border border-border hover:border-primary hover:text-primary transition-all"
						title="LinkedIn"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
					</a>
					<a
						href="https://twitter.com/priyanshu_garg"
						target="_blank"
						rel="noopener noreferrer"
						class="p-4 rounded-full border border-border hover:border-primary hover:text-primary transition-all"
						title="Twitter"
					>
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
						</svg>
					</a>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="py-8 px-6 border-t border-border">
			<div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4 text-muted-foreground text-sm">
				<p>Â© 2026 Priyanshu Garg. All rights reserved.</p>
				<p>Built with Astro, React & Three.js</p>
			</div>
		</footer>
	</main>

	<!-- Email copy script -->
	<script>
		document.getElementById('email-copy')?.addEventListener('click', async () => {
			const email = 'mailpriyanshugarg@gmail.com';
			try {
				await navigator.clipboard.writeText(email);
				const el = document.getElementById('email-copy');
				if (el) {
					const originalText = el.textContent;
					el.textContent = 'Copied!';
					setTimeout(() => {
						el.textContent = originalText;
					}, 2000);
				}
			} catch (err) {
				console.error('Failed to copy:', err);
			}
		});
	</script>
</Layout>
