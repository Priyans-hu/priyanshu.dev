---
// Component imports
import { SEO } from "astro-seo"

// Style imports
import "~/styles/global.css"
import BasicScripts from "~/components/dom/common/BasicScripts.astro"
import Scene from "~/components/canvas/Scene"
import Enhancements from "~/components/dom/common/Enhancements"

// Helper imports
import { seoConfig } from "~/utils/seoConfig"

// Props
export interface Props {
	/** Title of the page. */
	title: string

	/** Specific OpenGraph page title. */
	ogTitle?: string

	/** Description of the page. */
	description?: string

	/** Image thumbnail for the page. */
	image?: {
		url: string
		alt: string
	}

	/** Whether or not to disable indexing */
	disableIndexing?: boolean
}

const {
	title,
	ogTitle,
	description,
	image,
	disableIndexing = false
} = Astro.props as Props
---

<html lang="en" class="scroll-smooth">
	<head>
		<!-- SEO. -->
		<SEO
			title={title}
			description={seoConfig.description || description}
			noindex={disableIndexing}
			nofollow={disableIndexing}
			canonical={seoConfig.baseURL}
			openGraph={{
				basic: {
					title: ogTitle || title,
					type: "website",
					image: seoConfig.baseURL + seoConfig.image.url,
					url: seoConfig.baseURL
				},
				image: {
					width: seoConfig.image.width,
					height: seoConfig.image.height,
					alt: seoConfig.image.alt || image?.alt
				},
				optional: {
					siteName: seoConfig.siteName,
					description: seoConfig.description || description,
					locale: "en_US"
				}
			}}
			twitter={{
				card: seoConfig.twitter.card
			}}
		/>

		<!-- Global meta tags. -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="author" content="Priyanshu Garg" />
		<meta name="keywords" content={seoConfig.keywords?.join(", ")} />
		<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
		<link rel="canonical" href={seoConfig.baseURL} />

		<!-- Search Engine Verification -->
		<meta name="google-site-verification" content="orcPxI47GSa-cRvY11tUe6iGg2IO_RPvnA1q95iEM3M" />

		<!-- Geo targeting for US/International -->
		<meta name="geo.region" content="US" />
		<meta name="geo.placename" content="United States" />
		<meta name="language" content="English" />
		<meta name="target" content="all" />

		<!-- JSON-LD Structured Data for Person -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "Person",
			"name": "Priyanshu Garg",
			"url": "https://priyans-hu.netlify.app",
			"image": "https://priyans-hu.netlify.app/og-image.png",
			"sameAs": [
				"https://github.com/Priyans-hu",
				"https://linkedin.com/in/priyans-hu",
				"https://instagram.com/shotbypriyanshu"
			],
			"jobTitle": "Software Development Engineer",
			"worksFor": {
				"@type": "Organization",
				"name": "Plivo",
				"url": "https://www.plivo.com"
			},
			"alumniOf": {
				"@type": "CollegeOrUniversity",
				"name": "Chitkara University, Punjab"
			},
			"nationality": {
				"@type": "Country",
				"name": "India"
			},
			"knowsAbout": [
				"React.js",
				"Node.js",
				"Go",
				"TypeScript",
				"Swift",
				"PostgreSQL",
				"AWS",
				"Docker",
				"Full Stack Development",
				"CLI Tools",
				"Open Source"
			],
			"description": "Full Stack Developer specializing in Go, React, TypeScript, and cloud technologies. Currently SDE-1 at Plivo. Creator of Argus (AI code analyzer) and TokenMeter (macOS token tracker)."
		})} />

		<!-- JSON-LD Structured Data for WebSite -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Priyanshu Garg Portfolio",
			"url": "https://priyans-hu.netlify.app",
			"description": "Full Stack Developer portfolio â€” projects, experience, and open source work by Priyanshu Garg",
			"author": {
				"@type": "Person",
				"name": "Priyanshu Garg"
			}
		})} />

		<!-- JSON-LD Structured Data for Projects (ItemList) -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "ItemList",
			"name": "Open Source Projects by Priyanshu Garg",
			"itemListElement": [
				{
					"@type": "SoftwareApplication",
					"position": 1,
					"name": "Argus",
					"description": "CLI tool that scans codebases and generates AI-optimized context files for Claude, Cursor, Copilot, and more. Includes monorepo support, Ollama AI enrichment, and a VS Code extension.",
					"url": "https://github.com/Priyans-hu/argus",
					"applicationCategory": "DeveloperApplication",
					"operatingSystem": "Linux, macOS, Windows",
					"programmingLanguage": ["Go", "TypeScript"],
					"author": { "@type": "Person", "name": "Priyanshu Garg" },
					"offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
				},
				{
					"@type": "SoftwareApplication",
					"position": 2,
					"name": "TokenMeter",
					"description": "macOS menu bar app for Claude Code token usage visualization. Track costs, monitor sessions, and stay on top of AI spending.",
					"url": "https://github.com/Priyans-hu/tokenmeter",
					"applicationCategory": "DeveloperApplication",
					"operatingSystem": "macOS",
					"programmingLanguage": "Swift",
					"author": { "@type": "Person", "name": "Priyanshu Garg" },
					"offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
				},
				{
					"@type": "SoftwareApplication",
					"position": 3,
					"name": "Ledger",
					"description": "Shop management system with customer tracking, GST invoicing, and profit analytics for Indian small businesses.",
					"url": "https://github.com/Priyans-hu/ledger",
					"applicationCategory": "BusinessApplication",
					"programmingLanguage": ["React", "Node.js"],
					"author": { "@type": "Person", "name": "Priyanshu Garg" },
					"offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" }
				}
			]
		})} />

		<!-- JARVIS theme initialization -->
		<script is:inline>
			// Initialize theme - supports light, dark, joy
			const theme = localStorage.getItem('theme') || 'dark';
			document.documentElement.classList.remove('dark', 'joy');
			if (theme === 'dark') {
				document.documentElement.classList.add('dark');
			} else if (theme === 'joy') {
				document.documentElement.classList.add('joy');
			}
		</script>

		<!-- AI discoverability -->
		<link rel="alternate" type="text/plain" href="/llms.txt" title="LLM-readable profile" />

		<!-- Favicons. -->
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/favicon-180x180.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
		<link rel="shortcut icon" type="image/x-icon" href="/favicons/favicon.ico" />
		<link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
		<meta name="theme-color" content="#0ea5e9" />

		<!-- Service worker registration. -->
		<script is:inline src="/registerSW.js"></script>
		<link rel="manifest" href="/manifest.webmanifest" />
	</head>
	<body class="min-h-screen bg-background text-foreground antialiased">
		<!-- 3D Background Scene -->
		<div class="fixed inset-0 -z-10 pointer-events-none">
			<Scene client:only="react" />
		</div>

		<!-- Main Content - Normal scrolling -->
		<div class="relative z-0">
			<slot />
		</div>

		<!-- UI Enhancements: Easter eggs, sounds, back-to-top, smooth scroll -->
		<Enhancements client:only="react" />

		<BasicScripts />
	</body>
</html>
